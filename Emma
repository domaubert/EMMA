#!/bin/bash

SCRIPT=smithers
DATA_FOLDER=data/
RUN_FOLDER=$1
IC_FOLDER=IC/

make

mkdir $DATA_FOLDER$RUN_FOLDER

cp -r src $DATA_FOLDER$RUN_FOLDER
cp emmacpu $DATA_FOLDER$RUN_FOLDER
cp param.* $DATA_FOLDER$RUN_FOLDER
cp scripts/${SCRIPT} $DATA_FOLDER$RUN_FOLDER

ln -s $(pwd)/$IC_FOLDER/level_* $DATA_FOLDER$RUN_FOLDER

cd $DATA_FOLDER/$RUN_FOLDER

./${SCRIPT}
#sbatch ${SCRIPT}
#ccc_msub ${SCRIPT}
